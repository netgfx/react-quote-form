{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}